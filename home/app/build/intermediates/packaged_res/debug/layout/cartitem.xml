<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imv_ProductImage"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_image_24"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">
        <TextView
            android:id="@+id/txt_ProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cơm quê mười khó"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/txt_ProductSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size: M"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txt_ProductColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color: Red"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imv_Minus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_remove_circle_24"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txt_ProductQuantity"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/imv_Add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_add_circle_24"
                android:layout_gravity="center"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_ProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.000 Đ"
                android:textStyle="bold"
                android:textSize="22sp"
                />
            <CheckBox
                android:id="@+id/chk_ProductBuy"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|right" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetails"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_sp1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/nen" />

    <TextView
        android:id="@+id/txt_ProductsDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Áo thun cực mát đến từ The Weekdays"
        android:textSize="25sp"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_ProductsDetailPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10000"
        android:textColor="#FF5722"
        android:textSize="20sp"
        android:gravity="left"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_ProductsDetailSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size: "
        android:textSize="20sp"
        android:gravity="left"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="10">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_remove_circle_24"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="01"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:layout_weight="12"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thêm vào giỏ hàng"
        android:backgroundTint="#111111"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_ProductsDetailDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Đây là dòng mô tả cho mục mô tả nằm trong mô tả Đây là dòng"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chính sách đổi trả"
        android:textSize="20sp"
        android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_ProductsDetailReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/chinhsachdoitra"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cam kết"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_ProductsDetailPromise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/camket"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Xem thêm"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đánh giá"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_person_24"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đinh Văn An"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dùng thích lắm em, sản phẩm tố"
                    android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Xem thêm"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="5">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/facebook_dark"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/instagram"
                android:layout_weight="1"/>
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/tiktok"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_7"
            android:layout_gravity="center"
            android:paddingVertical="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:gravity="center"
            android:textSize="20sp"/>


    </LinearLayout>
    </LinearLayout>

</ScrollView>
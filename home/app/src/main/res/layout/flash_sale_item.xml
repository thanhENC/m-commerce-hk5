<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="15">

        <ImageView
            android:id="@+id/imv_ProductImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:src="@drawable/ic_baseline_image_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:layout_weight="4">

            <TextView
                android:id="@+id/txt_ProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quần đùi áo số"
                android:textColor="@color/black"
                android:paddingVertical="5dp"
                android:textStyle="bold"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txt_ProductPriceSale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="135.000"
                    android:layout_weight="4.5"
                    android:layout_gravity="left"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:textSize="22sp"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5">

                    <TextView
                        android:id="@+id/txt_ProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150.000"
                        android:layout_gravity="center"
                        android:textColor="#919191"
                        android:textStyle="bold"
                        android:textSize="18sp"
/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/line"/>
                </FrameLayout>


                <TextView
                    android:id="@+id/txt_FlashsalePercent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-15%"
                    android:layout_weight="2"
                    android:layout_gravity="left"
                    android:layout_marginStart="5dp"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/flashsale_bar"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/fire_icon"
                        android:layout_gravity="left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chỉ còn "
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_FlashsaleQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" sản phẩm"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"/>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>